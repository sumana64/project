 		function validatePinCode() {

 			console.log("Name function is running")
 			const button = document.getElementById('button')
 			const pinCode= document.getElementById('inputPinCode').value

 			if (pinCode!=0) {

 				document.getElementById("pinCodeErr").innerHTML = "<span style='color:green'>pinCode is valid</span>"
 				button.removeAttribute("disabled")

 			} else {

 				document.getElementById("pinCodeErr").innerHTML = "<span style='color:red'>pinCode is Invalid</span>"
 				button.setAttribute("disabled", "")
 			}

 		}
 		
 		function validateEmail(){
 		    const em = document.getElementById('inputEmail').value;
 		    const button = document.getElementById('button');
 		    if (em.match(/^[a-z]+@[a-z]+\.[a-z]{3}$/)) {
 		      document.getElementById("emailErr").innerHTML = "<span style='color: green'>Email is valid</span>";
 		      button.removeAttribute("disabled");
 		   
 		    } else {
 		      document.getElementById("emailErr").innerHTML = "<span style='color: red'>Invalid Email format</span>";
 		      button.setAttribute("disabled", "");
 		    }
 		  	
 	}
 		
 		function validatePhoneNo(){
 			
 		    console.log("Number function is running")
 		    const button = document.getElementById('button')
 		    const phoneNo = document.getElementById('inputPhoneNo').value
 		   
 		    if(phoneNo==10){
 		    	
 		    	document.getElementById("phoneNoErr").innerHTML="<span style='color:green'>phoneNo is valid</span>"
 		    	button.removeAttribute("disabled")
 		   
 		    }else{
 		    	
 		    	document.getElementById("phoneNoErr").innerHTML="<span style='color:red'>phoneNo is Invalid</span>"
 		        button.setAttribute("disabled","")

 		    }
 		  
 		}
 		
 		function validateAadharNo() {

 		   console.log("Number function is running")
		    const button = document.getElementById('button')
		    const aadharNo = document.getElementById('inputAadharNo').value
		    
		    if(aadharNo!=0 && aadharNo==12){
		    	
		    	document.getElementById("aadharNoErr").innerHTML="<span style='color:green'>aadharNo is valid</span>"
		    	button.removeAttribute("disabled")
		   
		    }else{
		    	
		    	document.getElementById("aadharNoErr").innerHTML="<span style='color:red'>aadharNo is Invalid</span>"
		        button.setAttribute("disabled","")

		    }

 		}
 		
