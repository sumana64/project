<script type="text/javascript">
	function validateFname() {

		console.log("Name function is running")
		const button = document.getElementById('button')
		const fname = document.getElementById('inputFname').value
		console.log(fname)
		console.log(fname.length)

		if (fname.length>3 && fname.length <= 30) {

			document.getElementById("nameErr").innerHTML = "<span style='color:green'>fName is valid</span>"
			button.removeAttribute("disabled")

		} else {

			document.getElementById("nameErr").innerHTML = "<span style='color:red'>fName is Invalid</span>"
			button.setAttribute("disabled", "")
		}

	}
	function validateMname() {

		console.log("Name function is running")
		const button = document.getElementById('button')
		const mname = document.getElementById('inputMname').value
		console.log(mname)
		console.log(mname.length)

		if (mname.length >=2 && mname.length <= 30) {

			document.getElementById("mnameErr").innerHTML = "<span style='color:green'>MName is valid</span>"
			button.removeAttribute("disabled")

		} else {

			document.getElementById("mnameErr").innerHTML = "<span style='color:red'>MName is Invalid</span>"
			button.setAttribute("disabled", "")
		}

	}
